# 目标系统设置
CONFIG_TARGET_x86=y
CONFIG_TARGET_x86_64=y
CONFIG_TARGET_x86_64_DEVICE_generic=y
CONFIG_EFI_IMAGES=y
CONFIG_GRUB_EFI=y
# Ensure BIOS support is disabled
CONFIG_PACKAGE_syslinux=n
CONFIG_PACKAGE_grub-pc=n
CONFIG_PACKAGE_grub-pc-bin=n
CONFIG_PACKAGE_grub-efi=y
CONFIG_PACKAGE_grub-efi-bin=y
CONFIG_PACKAGE_grub2-efi=y
CONFIG_PACKAGE_grub2-efi-bin=y


# 基础系统包
CONFIG_PACKAGE_base-files=y
CONFIG_PACKAGE_libc=y
CONFIG_PACKAGE_libgcc=y
CONFIG_PACKAGE_logd=y
